<h1>Projects</h1>

<div class="mb-3">
  <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= project.title %></h5>
          <p class="card-text"><%= truncate(project.description, length: 100) %></p>
          <span class="badge bg-<%= status_color(project.status) %>"><%= project.status %></span>
          <div class="mt-3">
            <%= link_to "View", project_path(project), class: "btn btn-sm btn-primary w-25" %>
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-secondary w-25" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>