<h1>Log In</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= f.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
